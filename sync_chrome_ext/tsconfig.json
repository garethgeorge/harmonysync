{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "DOM", "ESNext"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "charset": "utf8",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
